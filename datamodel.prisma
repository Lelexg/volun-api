type Cause {
  id: Int! @id(strategy: SEQUENCE) @sequence(name: "Cause_id_seq", initialValue: 1, allocationSize: 1)
  description: String
  userId: User
}

type SocialNetwork {
  id: Int! @id(strategy: SEQUENCE) @sequence(name: "SocialNetwork_id_seq", initialValue: 1, allocationSize: 1)
  facebook: String
  instagram: String
  linkedin: String
  twitter: String
  userId: User! @unique
}

type User {
  id: Int! @id(strategy: SEQUENCE) @sequence(name: "User_id_seq", initialValue: 1, allocationSize: 1)
  cause: [Cause]
  email: String! @unique
  firstname: String!
  lastname: String!
  phone: String
  socialNetwork: SocialNetwork!
}